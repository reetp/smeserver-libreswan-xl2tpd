
#Ports for Openswan / xl2tpd
# Allow 1701
/sbin/iptables -A INPUT -m policy --dir in --pol ipsec -p udp --dport 1701 -j ACCEPT
/sbin/iptables -A INPUT -p udp --dport 1701 -j DROP

